extends ../layouts/layout

block content
  .container
  h2= title
  form.form.form(method="post", action=`http://localhost:3001/api/admin/users/${user._id}`, enctype="application/x-www-form-urlencoded", data-ajax, data-redirect="/admin/users")
    // override to PUT
    input.form-control(type="hidden", name="_method", value="PUT")

    div
      label(for="username") Username
      input#username(type="text", name="username", required, value=user.username)

    div
      label(for="email") Email
      input#email(type="email", name="email", required, value=user.email)

    div
      label(for="role") Role
      select#role(name="role")
        option(value="user",    selected=user.role=='user')  user
        option(value="admin",   selected=user.role=='admin') admin

    div
      label(for="password") Alterar Password?
      input#password(type="password", name="password", placeholder="Deixe vazio para manter")

