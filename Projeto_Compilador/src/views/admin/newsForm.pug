extends ../layouts/layout

block content
  .container
  h2= title
  form.form.form(method="post", action="http://localhost:3001/api/admin/news", data-ajax, data-redirect="/admin/news")
    div
      label Título
      input.form-control(type="text", name="title", value=news.title||'')
    div
      label Conteúdo
      textarea.nav-link(name="content")= news.content||''
    div
      label Visível?
      input.form-control(type="checkbox", name="visible", checked=news.visible)
    button.btn(type="submit") Guardar
  p: a.nav-link(href="/admin/news") Voltar